{
    "manifest_version": 3,
    "name": "CP Calendar",
    "version": "1.0",
    "description": "Competitive Programming Contest Calendar for Codeforces, CodeChef, and AtCoder",
    "permissions": [
      "storage",
      "alarms",
      "activeTab"
    ],
    "host_permissions": [
      "https://codeforces.com/*",
      "https://www.kontests.net/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }